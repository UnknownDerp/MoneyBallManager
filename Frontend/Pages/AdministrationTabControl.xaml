<UserControl x:Class="Frontend.Pages.AdministrationTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <ComboBox Name="ClubsComboBox" Width="150" Height="25" Margin="2,5,5,5" ItemsSource="{Binding Clubs}" DisplayMemberPath="Name" SelectedValuePath="Id"/>
                <Button Width="50" Height="25" Content="Set" Style="{StaticResource ButtonStyle}" Click="SetDefaultClub_Click"></Button>
            </StackPanel>
            <Button Width="100" Height="50" Content="Reset Database" Style="{StaticResource ButtonStyle}" Click="ResetDatabase_buttonClick"/>
            
        </StackPanel>
    </Grid>
</UserControl>
