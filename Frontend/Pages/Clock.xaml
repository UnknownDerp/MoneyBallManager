<UserControl x:Class="Frontend.Pages.Clock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend.Pages"
             xmlns:colorConstants="clr-namespace:Frontend.Colors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource TextBlockStyle}" Padding="0,0,5,0" Foreground="{x:Static colorConstants:ColorConstants.Background}" Text="TempClock" FontWeight="Bold" FontSize="14" Name="DateText"/>
            <TextBlock Style="{StaticResource TextBlockStyle}" Padding="0,0,5,0" Foreground="{x:Static colorConstants:ColorConstants.Background}" Text="TempClock" FontWeight="Bold" FontSize="20" Name="TimeText"/>    
        </StackPanel>
    </Grid>
</UserControl>
