<UserControl x:Class="Frontend.Pages.Buttons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right">
        <StackPanel Orientation="Horizontal">
            <Button Style="{StaticResource ButtonStyle}" Height="25" Width="50" Name="SaveButton" Content="Save" Margin="3,0,0,0" Click="SaveButtonClick"/>
            <Button Style="{StaticResource ButtonStyle}" Height="25" Width="50" Name="CancelButton" Content="Cancel" Margin="3,0,0,0" Click="CancelButtonClick"/>
            <Button Style="{StaticResource ButtonStyle}" Height="25" Width="50" Name="CloseButton" Content="Close" Margin="3,0,0,0" Click="CancelButtonClick"/>
        </StackPanel>
    </Grid>
</UserControl>
