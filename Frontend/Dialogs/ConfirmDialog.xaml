<Window x:Class="Frontend.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.Dialogs"
        xmlns:converters="clr-namespace:Frontend.Converters"
        xmlns:pages="clr-namespace:Frontend.Pages"
        mc:Ignorable="d"
        Title="Confirm" Height="165" Width="330" WindowStyle="ToolWindow" ResizeMode="NoResize" Icon="/Frontend;component/Icons/icons8-teams-50.png" WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom">
        <Button Width="75" Height="25" Content="OK" Margin="0,5,5,5" Click="ConfirmButtonClick"/>
        <Button Width="75" Height="25" Content="Cancel" Margin="0,5,5,5" IsCancel="True"/>
    </StackPanel>
            
</Window>
